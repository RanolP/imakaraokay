{
  "name": "@imakaraokay/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for imakaraokay",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./types": {
      "import": "./src/types.ts",
      "types": "./src/types.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "cheerio": "^1.1.0",
    "google-sr": "^5.0.0",
    "undici": "^7.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/cheerio": "^1.0.0",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "karaoke",
    "shared",
    "utilities",
    "types"
  ],
  "author": "RanolP",
  "license": "MIT"
} 
